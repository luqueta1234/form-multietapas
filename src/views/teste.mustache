              <input class="form-check-input" type="radio" name="diabetes" id="simDiabetes" value="Sim">
              <label class="form-check-label" for="simDiabetes">Sim</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="diabetes" id="naoDiabetes" value="Não">
              <label class="form-check-label" for="naoDiabetes">Não</label>
            </div>
            <label for="taxa_glicemica" class="form-label">Taxa Glicêmica:</label>
            <input type="number" class="form-control" name="taxa_glicemica" id="taxa_glicemica" placeholder="Informe Taxa Glicêmica">
            <label for="data_ultima_verificacao" class="form-label">Data da última Verificação:</label>
            <input type="date" class="form-control" name="data_ultima_verificacao" id="data_ultima_verificacao">
          </div>

          <div class="mb-4">
            <label for="insulina" class="form-label">Insulina:</label>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="insulina" id="simInsulina" value="Sim">
              <label class="form-check-label" for="simInsulina">Sim</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="insulina" id="naoInsulina" value="Nao">
              <label class="form-check-label" for="naoInsulina">Não</label>
