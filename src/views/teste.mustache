            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="dedo_flexivelE" id="esquerdoFlex" value="Sim">
              <label class="form-check-label" for="esquerdoFlex">Esquerdo</label>
            </div>
          </div>
          <div class="mb-3">
            <label for="dedo_rigido" class="form-label">Rígido:</label>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="dedo_rigidoD" id="direitoRigido" value="Sim">
              <label class="form-check-label" for="direitoRigido">Direito</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="dedo_rigidoE" id="esquerdoRigido" value="Sim">
              <label class="form-check-label" for="esquerdoRigido">Esquerdo</label>
            </div>
          </div>
          <div class="mb-3">
            <label for="dedo_espalmado" class="form-label">Espalmado:</label>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="dedo_espalmadoD" id="direitoEspalmado" value="Sim">
              <label class="form-check-label" for="direitoEspalmado">Direito</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="dedo_espalmadoE" id="esquerdoEspalmado" value="Sim">
              <label class="form-check-label" for="esquerdoEspalmado">Esquerdo</label>
            </div>
