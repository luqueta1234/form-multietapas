<div class="container my-4">
    <h1 class="text-center mb-4">Cadastro de Paciente - Podologia</h1>
    <form action="/teste" method="POST">
    <!-- ETAPA 1: Dados Pessoais -->
    <div id="etapa1" class="step active">
      <div class="card">
        <div class="card-header fs-4">
          DADOS PESSOAIS
        </div>
        <div class="card-body">
        
          <div class="mb-3">
            <label for="nome" class="form-label">Nome:</label>
            <input type="text" class="form-control" name="nome" required placeholder="Nome do Paciente">
          </div>

          <div class="mb-3">
            <label for="endereco" class="form-label">Endereço:</label>
            <input type="text" class="form-control" name="endereco" placeholder="Endereço do Paciente">
          </div>

          <div class="row">
            <div class="col-md-4">
              <label for="bairro" class="form-label">Bairro:</label>
              <input type="text" class="form-control" name="bairro" placeholder="Bairro">
            </div>
            <div class="col-md-4">
              <label for="cidade" class="form-label">Cidade:</label>
              <input type="text" class="form-control" name="cidade" placeholder="Cidade">
            </div>
            <div class="col-md-4">
              <label for="estado" class="form-label">Estado:</label>
              <input type="text" class="form-control" name="estado" placeholder="Estado">
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-4">
              <label for="cep" class="form-label">CEP:</label>
              <input type="text" class="form-control" name="cep" placeholder="CEP">
            </div>
            <div class="col-md-4">
              <label for="telefone_residencial" class="form-label">Tel.Res (Opcional):</label>
              <input type="text" class="form-control" name="telefone_residencial" placeholder="Telefone residencial">
            </div>
            <div class="col-md-4">
              <label for="telefone_celular" class="form-label">Celular:</label>
              <input type="text" class="form-control" name="telefone_celular" placeholder="Telefone celular">
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-4">
              <label for="email" class="form-label">Email:</label>
              <input type="email" class="form-control" name="email" placeholder="exemplo@gmail.com">
            </div>
            <div class="col-md-4">
              <label for="data_nascimento" class="form-label">Data Nascimento:</label>
              <input type="date" class="form-control" name="data_nascimento">
            </div>
            <div class="col-md-4">
              <label for="sexo" class="form-label">Sexo:</label>
              <div class="d-flex">
                <div class="form-check me-3">
                  <input class="form-check-input" type="radio" name="sexo" id="sexoM" value="Masculino">
                  <label class="form-check-label" for="sexoM">Masculino</label>
                </div>
                <div class="form-check me-3">
                  <input class="form-check-input" type="radio" name="sexo" id="sexoF" value="Feminino">
                  <label class="form-check-label" for="sexoF">Feminino</label>
                </div>
                <div class="form-check me-3">
                  <input class="form-check-input" type="radio" name="sexo" id="sexoN" value="Prefiro não informar">
                  <label class="form-check-label" for="sexoN">Prefiro não informar</label>
                </div>
              </div>
            </div>
          </div>
          <br>
          <div class="mb-3">
            <label for="trabalho" class="form-label">Qual sua profissão:</label>
            <input type="text" class="form-control" name="trabalho" placeholder="Nome da profissão">
          </div>
          <div class="d-flex justify-content-end">
          </div>
        </div>
      </div>
    </div>


<br>


    <!-- ETAPA 2: Dados Gerais -->
    <div id="etapa2" class="step">
      <div class="card">
        <div class="card-header fs-4">DADOS GERAIS</div>
        <div class="card-body">
          <div class="mb-3">
            <label for="podologo" class="form-label">Costuma ir ao podólogo?</label>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="visita_podologo" id="sim" value="Sim">
              <label class="form-check-label" for="sim">Sim</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="visita_podologo" id="nao" value="Não">
              <label class="form-check-label" for="nao">Não</label>
            </div>
            <label for="frequencia" class="form-label">Qual a frequência?</label>
            <input type="text" class="form-control" name="frequencia_podologo" id="frequencia_podologo" placeholder="Informe a frequência">
          </div>

          <div class="mb-3">
            <label for="medicamento" class="form-label">Faz uso de algum medicamento? Qual?</label>
            <input type="text" class="form-control" name="medicamento" id="medicamento" placeholder="Qual o(s) medicamento(s)">
          </div>

          <div class="mb-3">
            <label for="alergico" class="form-label">Alérgico?</label>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="alergico" id="simAlergico" value="Sim">
              <label class="form-check-label" for="simAlergico">Sim</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="alergico" id="naoAlergico" value="Não">
              <label class="form-check-label" for="naoAlergico">Não</label>
            </div>
            <label for="substancias" class="form-label">Quais substâncias?</label>
            <input type="text" class="form-control" name="substancias" id="substancias" placeholder="Informe a(s) substâncias">
          </div>

          <div class="mb-3">
            <label for="posicao" class="form-label">Posição de trabalho:</label>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="posicao_trabalho" id="emPe" value="Em pé">
              <label class="form-check-label" for="emPe">Em pé</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="posicao_trabalho" id="sentado" value="Sentado">
              <label class="form-check-label" for="sentado">Sentado</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="posicao_trabalho" id="andando" value="Andando">
              <label class="form-check-label" for="andando">Andando</label>
            </div>
            <label for="duracao" class="form-label">Duração:</label>
            <input type="text" class="form-control" name="duracao" id="duracao" placeholder="Digite a duração; Ex: 3hr; 40min">
          </div>

          <div class="mb-3">
            <label for="tempo_trabalho" class="form-label">Passa a maior parte do tempo:</label>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="maior_tempo" id="tempoEmPe" value="Em pé">
              <label class="form-check-label" for="tempoEmPe">Em pé</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="maior_tempo" id="tempoSentado" value="Sentado">
              <label class="form-check-label" for="tempoSentado">Sentado</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="maior_tempo" id="tempoAndando" value="Andando">
              <label class="form-check-label" for="tempoAndando">Andando</label>
            </div>
          </div>

          <div class="mb-3">
            <label for="calcado" class="form-label">N° Calçado:</label>
            <input type="number" class="form-control" name="ncalcado" id="ncalcado" placeholder="Número">
          </div>

          <div class="mb-3">
            <label for="tipoCalcado" class="form-label">Tipo de calçado diário:</label>
            <input type="text" class="form-control" name="tipo_calcado" id="tipo_calcado" placeholder="Tipo do Calçado">
          </div>

          <div class="mb-3">
            <label for="palmilha" class="form-label">Faz uso de palmilha?</label>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="uso_palmilha" id="simPalmilha" value="Sim">
              <label class="form-check-label" for="simPalmilha">Sim</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="uso_palmilha" id="naoPalmilha" value="Não">
              <label class="form-check-label" for="naoPalmilha">Não</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="uso_palmilha" id="ortopedica" value="Ortopédica">
              <label class="form-check-label" for="ortopedica">Ortopédica</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="uso_palmilha" id="descanso" value="Descanso">
              <label class="form-check-label" for="descanso">Descanso</label>
            </div>
          </div>

          <div class="mb-3">
            <label for="fumante" class="form-label">É fumante?</label>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="fumante" id="simFumante" value="Sim">
              <label class="form-check-label" for="simFumante">Sim</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="fumante" id="naoFumante" value="Não">
              <label class="form-check-label" for="naoFumante">Não</label>
            </div>
          </div>

          <div class="mb-3">
            <label for="menstrual" class="form-label">Ciclo menstrual em dia?</label>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="ciclo_menstrual_regular" id="simRegulado" value="Sim">
              <label class="form-check-label" for="simRegulado">Sim</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="ciclo_menstrual_regular" id="naoRegulado" value="Não">
              <label class="form-check-label" for="naoRegulado">Não</label>
            </div>
            <label for="dum" class="form-label">DUM (Data da última menstruação):</label>
            <input type="date" class="form-control" name="dum" id="dum">
          </div>

          <div class="mb-3">
            <label for="gestante" class="form-label">Está gestante?</label>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="gestante" id="simGestante" value="Sim">
              <label class="form-check-label" for="simGestante">Sim</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="gestante" id="naoGestante" value="Não">
              <label class="form-check-label" for="naoGestante">Não</label>
            </div>
            <label for="amamentando" class="form-label">Está amamentando?</label>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="amamentando" id="simAmamentando" value="Sim">
              <label class="form-check-label" for="simAmamentando">Sim</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="amamentando" id="naoAmamentando" value="Não">
              <label class="form-check-label" for="naoAmamentando">Não</label>
            </div>
          </div>

          <div class="mb-3">
            <label for="atividade" class="form-label">Pratica Atividade física?</label>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="pratica_atividade_fisica" id="simAtividade" value="Sim">
              <label class="form-check-label" for="simAtividade">Sim</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="pratica_atividade_fisica" id="naoAtividade" value="Não">
              <label class="form-check-label" for="naoAtividade">Não</label>
            </div>
            <div class="row mt-2">
              <div class="col-md-6 d-flex align-items-center">
                <label for="frequenciaE" class="form-label me-2">Frequência?</label>
                <input type="text" class="form-control" name="frequencia_atividade_fisica" id="frequencia_atividade_fisica" placeholder="Frequência por semana">
              </div>
              <div class="col-md-6 d-flex align-items-center">
                <label for="esporte" class="form-label me-2">Qual esporte e tipo de calçado?</label>
                <input type="text" class="form-control" name="esporte" id="esporte" placeholder="Esporte e tipo de calçado">
              </div>
            </div>
            <div class="mt-2">
              <label for="queixa" class="form-label">Queixa principal:</label>
              <textarea class="form-control" name="queixa" id="queixa" placeholder="Informe sua queixa principal"></textarea>
            </div>
          </div>
          <div class="d-flex justify-content-between">
            <button type="button" class="btn btn-secondary" onclick="prevStep(2)">Voltar</button>
          <button type="button" class="btn btn-primary" onclick="nextStep(2)">Próximo</button>
          </div>
        </div>
      </div>
    </div>





    <!-- ETAPA 3: Dados Clínicos -->
    <div id="etapa3" class="step">
      <div class="card">
        <div class="card-header fs-4">DADOS CLÍNICOS</div>
        <div class="card-body">
          <div class="mb-4">
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" name="hipertirioidismo" id="hipertiroidismo" value="Sim">
              <label class="form-check-label" for="hipertiroidismo">Hipertirioidismo</label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" name="renal" id="renal" value="Sim">
              <label class="form-check-label" for="renal">Renal</label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" name="epilepsia" id="epilepsia" value="Sim">
              <label class="form-check-label" for="epilepsia">Epilepsia</label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" name="quimioterapia_ou_radioterapia" id="quimioterapia_ou_radioterapia" value="Sim">
              <label class="form-check-label" for="quimioterapia_ou_radioterapia">Quimioterapia / Radioterapia</label>
            </div>
          </div>
          
          <div class="mb-4">
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" name="osteoporose" id="osteoporose" value="Sim">
              <label class="form-check-label" for="osteoporose">Osteoporose</label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" name="hipotiroidismo" id="hipotiroidismo" value="Sim">
              <label class="form-check-label" for="hipotiroidismo">Hipotiroidismo</label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" name="neuropatia" id="neuropatia" value="Sim">
              <label class="form-check-label" for="neuropatia">Neuropatia</label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" name="hepatite" id="hepatite" value="Sim">
              <label class="form-check-label" for="hepatite">Hepatite</label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" name="antecedentes_oncologicos" id="antecedentes_oncologicos" value="Sim">
              <label class="form-check-label" for="antecedentes_oncologicos">Antecedentes Oncológicos</label>
            </div>
          </div>
          
          <div class="mb-4">
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" name="cardiopatia" id="cardiopatia" value="Sim">
              <label class="form-check-label" for="cardiopatia">Cardiopatia</label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" name="hipertensao" id="hipertensao" value="Sim">
              <label class="form-check-label" for="hipertensao">Hipertensão</label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" name="reumatismo" id="reumatismo" value="Sim">
              <label class="form-check-label" for="reumatismo">Reumatismo</label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" name="hanseniase" id="hanseniase" value="Sim">
              <label class="form-check-label" for="hanseniase">Hanseniase</label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" name="cirurgia_mmii" id="cirurgia_mmii" value="Sim">
              <label class="form-check-label" for="cirurgia_mmii">Cirurgia MMII</label>
            </div>
          </div>
          
          <div class="mb-4">
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" name="marca_passo" id="marca_passo" value="Sim">
              <label class="form-check-label" for="marca_passo">Marca Passo</label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" name="hipotensao" id="hipotensao_clinico" value="Sim">
              <label class="form-check-label" for="hipotensao_clinico">Hipotensão</label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" name="comprometimento_vascular" id="comprometimento_vascular" value="Sim">
              <label class="form-check-label" for="comprometimento_vascular">Alterações ou Comprometimento Vasculares</label>
            </div>
