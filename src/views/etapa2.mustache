{{>partials/header}}

<style>
        .card {
            margin: 30px auto;
            padding: 20px;
            max-width: 90%;
        }
        .form-group {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 10px;
            flex-wrap: wrap;
            font-size: 1rem;
        }
        .form-group input,
        .form-group textarea {
            flex-grow: 1;
            font-size: 1rem;
            padding: 6px;
        }
        .form-check-input {
            transform: scale(1.1);
        }
        .move-left {
            margin-left: 50px;
        }
        .btn {
            font-size: 1rem;
            padding: 8px 16px;
        }
        @media (max-width: 768px) {
            .form-group {
                flex-direction: column;
                align-items: flex-start;
            }

            .btn {
                width: 100%;
                text-align: center;
            }

            .d-flex {
                flex-direction: column;
                gap: 8px;
            }
        }
    </style>

    <div class="card">
        <div class="card-header" style="font-size: 1.5rem;">DADOS GERAIS</div>
        <div class="card-body">
        <form action="/etapa2" method="POST">
        <input type="hidden" name="id_dados_pessoais" value="<%= id %>">
            <div class="form-group">
                <label for="podologo">Costuma ir ao podólogo?</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="podologo" id="sim">
                    <label class="form-check-label" for="sim">Sim</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="podologo" id="nao">
                    <label class="form-check-label" for="nao">Não</label>
                </div>
                <label for="frequencia">Qual a frequência?</label>
                <input type="text" class="form-control" id="frequencia" placeholder="Informe a frequência">
            </div>

            <div class="form-group">
                <label for="medicamento">Faz uso de algum medicamento? Qual?</label>
                <input type="text" class="form-control" id="medicamento" placeholder="Qual o(s) medicamento(s)">
            </div>

            <div class="form-group">
                <label for="alergico">Alérgico?</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="alergico" id="simAlergico">
                    <label class="form-check-label" for="simAlergico">Sim</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="alergico" id="naoAlergico">
                    <label class="form-check-label" for="naoAlergico">Não</label>
                </div>
                <label for="substancias">Quais substâncias?</label>
                <input type="text" class="form-control" id="substancias" placeholder="Informe a(s) substâncias">
            </div>

            <div class="form-group">
                <label for="posicao">Posição de trabalho:</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="posicao" id="emPe">
                    <label class="form-check-label" for="emPe">Em pé</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="posicao" id="sentado">
                    <label class="form-check-label" for="sentado">Sentado</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="posicao" id="andando">
                    <label class="form-check-label" for="andando">Andando</label>
                </div>
                <label for="duracao">Duração:</label>
                <input type="text" class="form-control" id="duracao" placeholder="Digite a duração; Ex: 3hr; 40min">
            </div>

            <div class="form-group">
                <label for="ParteDoTempo">Passa a maior parte do tempo:</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="tempo_trabalho" id="EmPe">
                    <label class="form-check-label" for="EmPe">Em pé</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="tempo_trabalho" id="Sentado">
                    <label class="form-check-label" for="Sentado">Sentado</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="tempo_trabalho" id="Andando">
                    <label class="form-check-label" for="Andando">Andando</label>
                </div>
            </div>

            <div class="form-group">
                <label for="calcado">N° Calçado:</label>
                <div class="form-check">
                    <input type="number" class="form-control" id="substancias" placeholder="Numero">
                </div>
                <div class="form-check">
                </div>
                <label for="tipoCalcado">Tipo de calçado diário:</label>
                <input type="text" class="form-control" id="substancias" placeholder="Tipo do Calçado">
            </div>

            <div class="form-group">
                <label for="palmilha">Faz uso de palmilha?</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="palmilha" id="simpalmilha">
                    <label class="form-check-label" for="simpalmilha">Sim</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="palmilha" id="naoPalmilha">
                    <label class="form-check-label" for="naoPalmilha">Não</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Ortopedica/Descanso" id="Ortopedica">
                    <label class="form-check-label" for="Ortopedica">Ortopédica</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Ortopedica/Descanso" id="Descanso">
                    <label class="form-check-label" for="Descanso">Descanso</label>
                </div>
            </div>

            <div class="form-group">
                <label for="Fumante">É fumante?</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Fumante" id="simFumante">
                    <label class="form-check-label" for="simFumante">Sim</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Fumante" id="naoFumante">
                    <label class="form-check-label" for="naoFumante">Não</label>
                </div>
            </div>

            <div class="form-group ">
                <label for="Menstruacao">Ciclo menstrual em dia?</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Menstrual" id="simRegulado">
                    <label class="form-check-label" for="simRegulado">Sim</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Menstrual" id="naoRegulado">
                    <label class="form-check-label" for="naoRegulado">Não</label>
                </div>
                <label class="move-left" for="DUM">DUM (Data da última menstruação):</label>
                <div class="form-check">
                    <input type="date" class="form-control" id="substancias" placeholder="Número">
                </div>
            </div>

            <div class="form-group">
                <label for="Gestante">Está gestante?</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Gestante" id="simGestante">
                    <label class="form-check-label" for="simGestante">Sim</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Gestante" id="naoGestante">
                    <label class="form-check-label" for="naoGestante">Não</label>
                </div>

                <label class="move-left" for="Gestante ">Está amamentando?</label>
                <div class="form-check ">
                    <input class="form-check-input" type="radio" name="amamentando" id="simAmamentando">
                    <label class="form-check-label" for="simAmamentando">Sim</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="amamentando" id="naoAmamentando">
                    <label class="form-check-label" for="naoAmamentando">Não</label>
                </div>
            </div>

            <div class="form-group ">
                <label for="Atividade">Pratica Atividade física?</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Atividade" id="simPratica">
                    <label class="form-check-label" for="simPratica">Sim</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Atividade" id="naoPratica">
                    <label class="form-check-label" for="naoPratica">Não</label>
                </div>
                <div class="col-md-4 d-flex align-items-center ">
                    <label for="frequenciaE" class="form-label me-2 mt-2">Frequência?</label>
                    <input type="text" class="form-control" id="frequenciaE" placeholder="Escreva a quantidade por semana">
                </div>
                <div class="col-md-4 d-flex align-items-center">
                    <label for="Esporte" class="form-label me-2 mt-2">Qual esporte e tipo de calçado?</label>
                    <input type="text" class="form-control " id="Esporte" placeholder="Nome do esporte e do tipo de calçado">
                </div>
                <div class="form-group">
                    <label for="Queixa" style="width: 1450px;">Queixa principal:</label>
                    <textarea class="form-control" id="queixa" placeholder="Informe sua queixa principal"></textarea>
                </div>
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Próxima Etapa</button>
            </div>

            
        </div>
    </div>

{{>partials/footer}}